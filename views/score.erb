<h2>Score One Word</h2>

<form action="" method="post" accept-charset="utf-8">
  <label for="word">Enter a word to score:</label><br>
  <input
    type="text"
    name="word_to_score"
    value=""
    id="word"
    pattern="^[a-zA-Z]{1,7}$"
    title="Word must be between 1-7 letters."><br>
  <input type="submit" id="submit" value="Submit">
</form>

<% if @points %>
    <div class="word_score_display">
      <%= params["word_to_score"].upcase %> <br>
      <%= @points %> points
    </div>
<% end %>
