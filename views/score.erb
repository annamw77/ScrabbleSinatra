<h2>Score One Word</h2>

<form action="" method="post" accept-charset="utf-8">
  <label for="word">Enter a word to score:</label><br>
  <input type="text" name="word_to_score" value="" id="word"><br>
  <input type="submit" value="Submit">
</form>

<% if @points %>
    <div class="word_score_display">
      <%= params["word_to_score"].upcase %>: <%= @points %> points
    </div>
<% end %>
